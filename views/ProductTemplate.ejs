<div class="container mx-auto p-4 text-center">
    <div class="bg-white rounded-lg shadow-md lg:mx-60">
        <img src="/images/placeholder-book.png" alt="productname" class="h-64 object-cover mx-auto rounded-md shadow-lime-400">
        <div class="p-4">
            <h2 class="text-xl"><%= product.name %></h2>
            <p class="text-gray-700 mb-4"><%= product.description %></p>
            <p class="text-lg font-semibold text-green-500"q><%= product.price %></p>
        </div>
        <form action="/add-to-cart" method="POST" class="mt-4">
            <input type="hidden" name="id" value="<%= product.id %>"> <!-- Product ID -->
            <input type="hidden" name="name" value="<%= product.name %>">
            <input type="hidden" name="price" value="<%= product.price %>">
            <input type="number" name="quantity" value="1" min="1" class="border rounded p-2 text-center w-16">
            <button type="submit" class="bg-blue-500 text-white rounded p-2 mt-2">Add to Cart</button>
        </form>
    </div>
</div>