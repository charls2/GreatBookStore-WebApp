<div class="container mx-auto my-8 p-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-bold mb-4">Hi <%= user.name %></h1>
    <hr class="my-4">
    
    <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">Your Account:</h2>
        <ul class="list-disc list-inside">
            <li class="text-lg text-blue-600 hover:text-blue-800 cursor-pointer">Orders</li>
            <li class="text-lg text-blue-600 hover:text-blue-800 cursor-pointer">Account Settings</li>
            <% if (user.role == 'admin') {
                console.log('this guy admin'); %>
                <a href="/admin-dashboard" class="text-lg text-red-500 hover:text-red-800 cursor-pointer">Admin Dashboard</a>
            <% } else 
                console.log('this guy not admin');{ %>
            <% } %>
        </ul>
    </div>

    <div class="mb-6">
        <span class="text-gray-700 text-lg">Role: <%= user.role %></span>
    </div>

    <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">User Details:</h2>
        <ul class="list-disc list-inside">
            <%- getUserDescription(user) %>
        </ul>
    </div>

    <form action="/logout" method="POST">
        <button type="submit" class="bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-700">
            Log Out
        </button>
    </form>
</div>

<% function getUserDescription(user) {
    let description = '';
    for (const [key, value] of Object.entries(user)) {
        description += `<li><strong>${key}:</strong> ${value}</li>`;
    }
    return description;
} %>
