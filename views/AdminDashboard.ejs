<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4 text-center">CRUD Operations</h1>
    <form action="/" method="POST" class="mb-4">
        <input type="text" name="name" placeholder="Enter item name" required class="border border-gray-300 p-2 rounded mr-2">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Add Item</button>
    </form>
    <ul class="space-y-4">
        <% items.forEach(item => { %>
            <li class="flex items-center space-x-2">
                <form action="/" method="POST" class="inline-block">
                    <input type="hidden" name="bookId" value="<%= item.book_id %>">
                    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700">Delete</button>
                </form>
                <form action="/" method="POST" class="inline-block">
                    <input type="hidden" name="bookId" value="<%= item.book_id %>">
                    <input type="text" name="newTitle" value="<%= item.title %>" required class="border border-gray-300 p-2 rounded mr-2">
                    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700">Update</button>
                </form>
                <span class="text-gray-700"><%= item.title %></span>
            </li>
        <% }) %>
    </div>
</div>
