<div class="container items-center justify-center mx-auto p-4 bg-sky-950 rounded-lg">
    <h1 class="text-lime-50 text-4xl font-bold mb-2 p-8 mx-2 md:mx-4 text-center">Categories</h1>
  
    <!-- Display Error Messages -->
    <% if (message.length > 0) { %>
      <span class="block sm:inline"><%= message %></span>
    <% } %>

    <!-- horizontal tiles with (Categories) -->
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-4">
      <% categories.forEach(category => { %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden text-center">
          <a href="/category/<%= category.category_id %>">
            <img src="/images/placeholder-category.png">
            <p class="text-gray-800"><%= category.category_name %></p>
          </a>
        </div>
      <% }); %>
    </div>
</div>
